@model IEnumerable<Cinema.Models.Order>

@{
    ViewBag.Title = "Przegląd Zamówień";
}
                      <link href="~/Content/admin/AddFilm.css" type="text/css" rel="stylesheet" />

@if (!Model.Any())
{
    <div class="container">
        <div class="row">
            <div class=" col-md-12">
                <div class="panel panel-info panel-table">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col col-xs-6">
                                <h2><strong>Przegląd Zamówień</strong>
                                </h2>
                            </div>
                            <div class="col col-xs-6 text-right">
                                @Html.ActionLink("Kup bilet", "Repertoire", null, new {@class = "btn btn-sm btn-raised"})
                            </div>
                        </div>
                    </div>
                    <div class="panel-body text-center">
                        <h4>Nie masz żadnych zamówień.</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class=" col-md-12">
                <div class="panel panel-info panel-table">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col col-xs-6">
                                <h2><strong>Przegląd Zamówień</strong>
                                </h2>
                            </div>
                            <div class="col col-xs-6 text-right">
                                @Html.ActionLink("Kup bilet", "Repertoire", null, new {@class = "btn btn-sm btn-raised"})
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-list">
                            <thead>
                            <tr>
                                <th class=" col-md-2">@Html.DisplayNameFor(model => model.OrderDate)</th>
                                <th class="text-center hidden-xs col-md-1">@Html.DisplayNameFor(model => model.NormalTicket)</th>
                                <th class="text-center hidden-xs col-md-1">@Html.DisplayNameFor(model => model.ReducedTicket)</th>
                                <th class="text-center hidden-xs col-md-4">@Html.DisplayNameFor(model => model.TicketCode)</th>
                                <th class="text-center col-md-1 col-xs-2">Szczegóły</th>
                                <th class="text-center col-md-1 col-xs-6"><em class="fa fa-cog"></em></th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="@item.OrderID">
                                    <td class="text-center">@Html.DisplayFor(modelItem => item.OrderDate)</td>
                                    <td class="hidden-xs text-center">@Html.DisplayFor(modelItem => item.NormalTicket)</td>
                                    <td class="hidden-xs text-center">@Html.DisplayFor(modelItem => item.ReducedTicket)</td>
                                    <td class="hidden-xs text-center">@Html.DisplayFor(modelItem => item.TicketCode)</td>
                                    <td align="center">
                                        @Html.ActionLink(" ", "OrderDetails", new {id = item.OrderID}, new {@class = "btn btn-default fa fa-eye"})
                                    </td>
                                    <td align="center">
                                        @Html.ActionLink(" ", "OrderDelete", new {id = item.OrderID}, new {@class = "btn btn-danger fa fa-trash"})
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
