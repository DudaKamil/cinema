@model Cinema.Models.Seance

@{
    ViewBag.Title = "SeatReservation";
}

<h2>Zarezerwuj miejsce</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <div class=" col-md-12 col-md-offset-1">
                <div class="demo">
                    <div id="seat-map">
                        <div class="front">EKRAN</div>
                    </div>
                    <div class="booking-details">
                        <p>Film: <span> Tytuł filmu</span></p>
                        <p>Data seansu: <span>Styczeń 1, 20:00</span></p>
                        <p>Miejsce: </p>
                        <ul id="selected-seats"></ul>
                        <p>Bilety: <span id="counter">0</span></p>

                        @*do poprawy*@
                        @Html.ActionLink("Kup Bilet", "BuyTicket", new {id = 1}, new {@class = "btn btn-raised btn-success"})

                        <div id="legend"></div>
                    </div>
                    <div style="clear: both"></div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript" src="/Scripts/account/jquery.seat-charts.min.js"></script>
<script type="text/javascript" src="/Scripts/account/SeatReservation.js"></script>