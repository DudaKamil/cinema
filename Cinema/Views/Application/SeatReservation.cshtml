@model Cinema.Models.Seance

@{
    ViewBag.Title = "SeatReservation";
}

<h2>Zarezerwuj miejsce</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="demo">
        <div id="seat-map">
            <div class="front">SCREEN</div>
        </div>
        <div class="booking-details">
            <p>Movie: <span> Gingerclown</span></p>
            <p>Time: <span>November 3, 21:00</span></p>
            <p>Seat: </p>
            <ul id="selected-seats"></ul>
            <p>Tickets: <span id="counter">0</span></p>
            <p>Total: <b>$<span id="total">0</span></b></p>

            @*do poprawy*@
            @Html.ActionLink("Kup Bilet", "BuyTicket", new { id = 1 }, new { @class = "btn btn-success" })

            <div id="legend"></div>
        </div>
        <div style="clear:both"></div>
    </div>
}
<script type="text/javascript" src="/Scripts/account/jquery.seat-charts.min.js"></script>
<script type="text/javascript" src="/Scripts/account/SeatReservation.js"></script>