@model Cinema.Models.Order

@{
    ViewBag.Title = "Anuluj Zamówienie";
}

<h2>Anuluj Zamównienie</h2>

<h3>Jesteś pewien, że chcesz anulować to zamówienie?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NormalTicket)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NormalTicket)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReducedTicket)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReducedTicket)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TicketCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TicketCode)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Anuluj Zamówienie" class="btn btn-default" /> |
            @Html.ActionLink("Powrót do Podsumowania", "OrderSummary") |
            @Html.ActionLink("Szczegóły Zamówienia", "OrderDetails", new { id = Model.OrderID })
        </div>
    }
</div>
