@model Cinema.Models.TicketPrice

@{
    ViewBag.Title = "Cennik";
}
<link href="~/Content/admin/AddFilm.css" type="text/css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
            <div class="panel panel-info panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h2><strong>Cennik</strong></h2>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table id="moviesTable" class="table table-striped table-bordered table-list">
                        <thead>
                            <tr>
                                <th class="col-md-6 col-sm-8 col-xs-8">Rodzaj seansu</th>
                                <th class="text-center col-md-3 col-sm-2 col-xs-2">Filmy 2D</th>
                                <th class="text-center col-md-3 col-sm-2 col-xs-2">Filmy 3D</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-center">Bilet normalny</td>
                                <td class="text-center">@Html.DisplayFor(model => model.normal2D)</td>
                                <td class="text-center">@Html.DisplayFor(model => model.normal3D)</td>
                            </tr>
                            <tr>
                                <td class="text-center">Bilet ulgowy*</td>
                                <td class="text-center">@Html.DisplayFor(model => model.reduced2D)</td>
                                <td class="text-center">@Html.DisplayFor(model => model.reduced3D)</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="col-sm-12">
                        <h6>*młodzież szkolna oraz studenci do 26 roku życia<br /> (za okazaniem ważnej legitymacji uczniowskiej/studenckiej)</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>