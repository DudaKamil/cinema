@model Cinema.Models.MovieDetailsModel

@{
    ViewBag.Title = "Szczegóły Filmu";
}

<h2>Szczegóły Filmu</h2>

<div>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Length)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Length)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ImageURL)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImageURL)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>

@if (!Model.SeancesList.Any())
{
    <tr>
        <td>
            Przepraszamy, ale dla wybranego filmu nie ma żadnych seansów.
        </td>
    </tr>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Data")
            </th>
            <th>
                @Html.DisplayName("Typ")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.SeancesList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ShowDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.ActionLink("Kup Bilet", "Index", "Home")
                </td>
            </tr>
        }
    </table>
}
<p>    
    @Html.ActionLink("Powrót do Repertuaru", "Repertoire")
</p>
