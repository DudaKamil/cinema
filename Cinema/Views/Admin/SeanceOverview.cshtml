@using Cinema.DAL
@using Cinema.Services
@model IEnumerable<Cinema.Models.Seance>

@{
    ViewBag.Title = "Przegląd Seansów";
    MovieRepository movieRepo = new MovieRepository(new CinemaContext());
}


<h2>Przegląd Seansów</h2>

<p>
    @Html.ActionLink("Dodaj Seans", "SeanceAdd")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MovieID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(movieRepo.GetMovieName(item.MovieID), "MovieDetails", new {id = item.MovieID})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShowDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "SeanceEdit", new { id = item.SeanceID }) |
                @Html.ActionLink("Szczegóły", "SeanceDetails", new { id = item.SeanceID }) |
                @Html.ActionLink("Usuń", "SeanceDelete", new { id = item.SeanceID })
            </td>
        </tr>
    }

</table>