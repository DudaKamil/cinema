@model IEnumerable<Cinema.Models.Movie>

@{
    ViewBag.Title = "Przeglądaj Filmy";
}

<h2>Przegląd Filmów</h2>


<p>
    @Html.ActionLink("Dodaj Film", "MovieAdd")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Length)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                <a href="@item.ImageURL">@item.ImageURL</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "MovieEdit", new { id = item.MovieID}) |
                @Html.ActionLink("Szczegóły", "MovieDetails", new {id = item.MovieID})
            </td>
        </tr>
    }
</table>


