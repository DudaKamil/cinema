@model IEnumerable<Cinema.Models.User>

@{
    ViewBag.Title = "Przegląd Użytkowników";
}

<link href="~/Content/admin/AddFilm.css" type="text/css" rel="stylesheet" />

    <div class="container">
        <div class="row">
            <div class=" col-md-8 col-md-offset-2">
                <div class="panel panel-default panel-table">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col col-xs-6">
                                <h2>Przegląd Użytkowników</h2>
                            </div>
                            <div class="col col-xs-6 text-right">
                                @Html.ActionLink("Dodaj Użytkownika", "UserAdd", null, new { @class = "btn btn-sm btn-primary btn-create" })
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <table id="moviesTable" class="table table-striped table-bordered table-list">
                            <thead>
                                <tr>
                                    <th class="text-center col-md-2">@Html.DisplayNameFor(model => model.Login)</th>
                                    <th class="text-center col-md-4 hidden-xs">@Html.DisplayNameFor(model => model.Email)</th>
                                    <th class="text-center col-md-2 hidden-xs">@Html.DisplayNameFor(model => model.Name)</th>
                                    <th class="text-center col-md-4"><em class="fa fa-cog"></em></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td align="center">
                                            @Html.DisplayFor(modelItem => item.Login)
                                        </td>
                                        <td class="text-center hidden-xs">
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td class="text-center hidden-xs">
                                            @Html.DisplayFor(model => item.Name)
                                        </td>
                                        <td align="center">
                                            @Html.ActionLink(" ", "UserEdit", new { id = item.UserID }, new { @class = "btn btn-default fa fa-pencil" })
                                            @Html.ActionLink(" ", "UserDelete", new { id = item.UserID }, new { @class = "btn btn-danger fa fa-trash" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>